{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Meta-schema for self-describing JSON schema",
    "self": {
        "vendor": "com.snowplowanalytics.self-desc",
        "name": "schema",
        "format": "jsonschema",
        "version": "1-0-0"
    },
    "allOf": [
    {
        "properties": {
            "self": {
                "type": "object",
                "properties": {
                    "vendor": {
                        "type": "string",
                        "pattern": "^[a-zA-Z0-9-_.]+$"
                    },
                    "name": {
                        "type": "string",
                        "pattern": "^[a-zA-Z0-9-_]+$"
                    },
                    "format": {
                        "type": "string",
                        "pattern": "^[a-zA-Z0-9-_]+$"
                    },
                    "version": {
                        "type": "string",
                        "pattern": "^[0-9]+-[0-9]+-[0-9]+$"
                    }
                },
                "required": ["vendor", "name", "format", "version"],
                "additionalProperties": false
            }
        },
        "required": ["self"]
    },
    {
        "$ref": "http://json-schema.org/draft-04/schema#"
    }
    ]
}
